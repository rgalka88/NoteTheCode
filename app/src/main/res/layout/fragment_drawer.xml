<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/greyDark"
            app:layout_constraintEnd_toStartOf="@+id/drawerWidthGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drawerWidthGuideline"
            app:layout_constraintGuide_percent="0.6"
            android:orientation="vertical"/>

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appNameTextView"
            android:textColor="@color/greyLight"
            app:layout_constraintEnd_toStartOf="@+id/drawerWidthGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/toolbarGuideline"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarGuideline"
            app:layout_constraintGuide_begin="?attr/actionBarSize"
            android:orientation="horizontal"/>

    <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:tint="@color/drawerContent"
            android:layout_height="@dimen/icon_size_small"
            tools:srcCompat="@drawable/ic_cloud_off"
            android:id="@+id/cloudIcon"
            app:layout_constraintEnd_toStartOf="@+id/drawerWidthGuideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/toolbarGuideline"
            android:layout_marginEnd="8dp"
            tools:ignore="ContentDescription"/>

    <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/drawerWidthGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbarGuideline"
            tools:listitem="@layout/drawer_row"
            android:id="@+id/recyclerView"/>

</androidx.constraintlayout.widget.ConstraintLayout>